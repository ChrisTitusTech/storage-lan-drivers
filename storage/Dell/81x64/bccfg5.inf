[Version]
Signature              = "$Windows NT$"
Provider               = %DELL%
Class                  = System
ClassGUID              = {4D36E97D-E325-11CE-BFC1-08002BE10318}
CatalogFile            = bccfg5.cat
PnpLockDown            = 1
DriverVer              = 05/27/2017,5.0.0.0030

;-----------------------------------------------------------------------------

[SourceDisksNames]
1 = %bccfg_Desc%

;-----------------------------------------------------------------------------

[SourceDisksFiles]
bccfg5.sys = 1

;-----------------------------------------------------------------------------

[DestinationDirs]
DefaultDestDir = 12   ;%WinDir%\System32\Drivers directory on NT-based systems

;-----------------------------------------------------------------------------

[ControlFlags]
ExcludeFromSelect = *

;-----------------------------------------------------------------------------

[Manufacturer]
%DELL% = DELL,ntamd64

;-----------------------------------------------------------------------------

[DELL.ntamd64]
%bccfg_Desc% = bccfg_Inst, SCSI\ProcessorRAIDCOREConfiguration___V1.1

;-----------------------------------------------------------------------------

[bccfg_Inst]
CopyFiles = DefaultDestDir

;-----------------------------------------------------------------------------

[DefaultDestDir]
bccfg5.sys,,,0x00002004

;-----------------------------------------------------------------------------

[bccfg_Inst.Services]
AddService = bccfg5,0x00000002,bccfg_Service_Inst

;-----------------------------------------------------------------------------

[bccfg_Service_Inst]
ServiceType   = 1                    ; SERVICE_KERNEL_DRIVER
StartType     = 3                    ; SERVICE_DEMAND_START
ErrorControl  = 1                    ; SERVICE_ERROR_NORMAL
ServiceBinary = %12%\bccfg5.sys
DisplayName   = %bccfg_Desc%

;-----------------------------------------------------------------------------

[Strings]
DELL = "Dell Inc."
bccfg_Desc = "Dell PERC S140 Configuration Device"
